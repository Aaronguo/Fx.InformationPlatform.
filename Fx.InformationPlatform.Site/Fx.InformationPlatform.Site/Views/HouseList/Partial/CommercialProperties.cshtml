                                    @foreach (var picture in Model[i].Pictures)
                                    {
                                        if (picture.TransferPictureCatagroy == (int)Fx.Entity.PictureCatagroy.Head)
                                        {
                                        <div style="height: 200px;">
                                            <a href="@Fx.InformationPlatform.Site.AppSettings.HouseTransferLink(Model[i].HouseTransferInfoId)" class="tops_aa_imgs_kk">

                                                <img src="@Fx.InformationPlatform.Site.AppSettings.ImageUploadCdnDomain(picture.ImageUrl)"/>
                                            </a>
                                        </div>
                                            break;
                                        }
                                    }
                                    <div class="tits_btm_coms_list names_btm">
                                        <a href="@Fx.InformationPlatform.Site.AppSettings.HouseTransferLink(Model[i].HouseTransferInfoId)">
                                            @if (Model[i + 1].PublishTitle != null && Model[i + 1].PublishTitle.Length >= 8)
