@model List<Fx.Entity.FxHouse.HouseTransferInfo>
<div class="grid_24">
    <div class="grid_3 alpha">
        <img class="list_left_img_demo_tit" src="@Fx.InformationPlatform.Site.AppSettings.ImageDomain("houseList/CommercialProperties.png")">
    </div>
    <div class="grid_21 omega" style="text-align: left; float: right;">
        <div class="topLoop" id="sliders_1" style="width: 830px; height: 243px;">
