<div id="topbar">
    <div class="container_24">
        <div class="grid_24" style="text-align: right;">
            @if (!Request.IsAuthenticated)
            { 
                <div class="topbar">
                    @Html.ActionLink("注册", "Register", "Account")
                    <span class="sep">|</span>
                    @Html.ActionLink("登录", "Login", "Account")
                    <span class="sep">|</span> <a href="http://www.baixing.com/wo/" rel="nofollow">我的英淘网</a>
                    <span class="sep">|</span> <a class="topbar-fav" href="http://www.baixing.com/wo/favorite/" rel="nofollow">我的收藏</a>
                </div>
                <!-- topbar -->
            }
            else
            {
                <div class="topbar">
                    <span class="topbar-right-text">欢迎，<a href="/Account/Index">@User.Identity.Name</a>
                        [<a href="/Account/LoginOff">退出</a>]
                    </span>
                    <span class="sep">|</span> <a href="/Account/Index" rel="nofollow">我的英淘网</a>
                    <span class="sep">|</span> <a class="topbar-fav" href="/Account/Favorite/">我的收藏</a>
                </div>
            }
        </div>
        <div class="clear"></div>
    </div>
    <!-- .container -->
</div>
