@model Fx.InformationPlatform.Site.ViewModel.CarBuySearchModel
@if (Model.CurrentIndex == 1)
{
    @Html.ActionLink("上一页", Model.Action, new { id = 1 }, new { @class = "pre-btn" })
}
else
{
    @Html.ActionLink("上一页", Model.Action, new { id = Model.CurrentIndex - 1 }, new { @class = "pre-btn" })
}
@for (int i = Model.StartIndex; i <= Model.EndIndex; i++)
{
    if (i == Model.CurrentIndex)
    {
    <a href="#" class="currents-pages">@Model.CurrentIndex</a>
    }
    else
    {
    @Html.ActionLink(i.ToString(), Model.Action, new { id = i })
    }
}
@Html.ActionLink("下一页", Model.Action, new { id = Model.CurrentIndex + 1 }, new { @class = "next-btn" })
