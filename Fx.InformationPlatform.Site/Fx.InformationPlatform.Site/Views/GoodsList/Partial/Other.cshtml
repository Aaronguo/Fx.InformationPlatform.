@model List<Fx.Entity.FxGoods.GoodsTransferInfo>
<div class="grid_24">
    <div class="grid_3 alpha">
        <img class="list_left_img_demo_tit" src="@Fx.InformationPlatform.Site.AppSettings.ImageDomain("goodsList/Other.png")">
    </div>
    <div class="grid_21 omega" style="text-align: left; float: right;">
        <div class="topLoop" id="sliders_1" style="width: 830px; height: 243px;">
            <div class="hd" style="width: 40px; height: 243px; left: 3px;"><a class="next" style="margin-top: 65px;"></a><a class="prev"></a></div>
            <div class="bd" style="width: 790px; position: relative; left: 40px; top: 0px; border: 0px; padding: 0px; height: 243px;">
                <ul class="picList" style="float: none; height: 255px; padding-top: 0px;">
                    @for (int i = 0; i < Model.Count; i = i + 4)
