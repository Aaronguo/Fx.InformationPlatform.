                                        if (picture.TransferPictureCatagroy == (int)Fx.Entity.PictureCatagroy.Head)
                                        {
                                        <a href="@Fx.InformationPlatform.Site.AppSettings.GoodsTransferLink(Model[i].GoodsTransferInfoId)" class="tops_aa_imgs_kk">

                                            <img src="@Fx.InformationPlatform.Site.AppSettings.ImageUploadCdnDomain(picture.ImageUrl)"/>
                                        </a>
                                            break;
                                        }
                                    }
                                    <div class="tits_btm_coms_list names_btm">
                                        <a href="@Fx.InformationPlatform.Site.AppSettings.GoodsTransferLink(Model[i].GoodsTransferInfoId)">@Model[i].PublishTitle、 @Model[i].Price ￡</a>
                                    </div>
                                </div>

                                <div class="list_scroll_inn_wks">
