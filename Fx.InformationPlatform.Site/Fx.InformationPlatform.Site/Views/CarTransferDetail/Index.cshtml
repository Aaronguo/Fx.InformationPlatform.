@model Fx.Entity.FxCar.CarTransferInfo
@{
    ViewBag.Title = Model.PublishTitle + "车辆转让信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="interval_20"></div>
<link rel="stylesheet" href="@Fx.InformationPlatform.Site.AppSettings.CssDomain("easydialog.css")" />

@Html.Partial("Partial/Madol")

<div class="grid_24">
    <div class="grid_9 alpha">
        <div class="big_img_suo_l_imgs">
            @foreach (var picture in Model.Pictures)
            {
                if (picture.TransferPictureCatagroy == (int)Fx.Entity.PictureCatagroy.Head)
                { 
                <a href="@Fx.InformationPlatform.Site.AppSettings.ImageUploadCdnDomain(picture.ImageUrl)" class="jqzoom" id="big_suol_img">
                    <img id="midium_imgs" src="@Fx.InformationPlatform.Site.AppSettings.ImageUploadCdnDomain(picture.ImageUrl)"
                        style="border: 1px solid #cccccc; max-width: 348px;  display: block;">
                </a>
                    break;
                }
            }
        </div>
    </div>
    <div class="grid_2 alpha">
        <div class="right_small_imgs_sll_demo" id="right_small_img_set">
            @foreach (var picture in Model.Pictures)
            {
                <span>
                    <div class="left_arr">
                        <img src="@Fx.InformationPlatform.Site.AppSettings.ImageDomain("current_img_arrow.png")" class="arrow_red">
                    </div>
                    <div class="right_imgs_dm_on">
                        <a href="#">
                            <img src="@Fx.InformationPlatform.Site.AppSettings.ImageUploadCdnDomain(picture.MinImageUrl)" 
                            bigpic="@Fx.InformationPlatform.Site.AppSettings.ImageUploadCdnDomain(picture.ImageUrl)">
                        </a>
                    </div>
                </span>
            }
        </div>
    </div>
    <div class="grid_11">
        <div class="goods_descriptions_demo">
            <div class="goods_names"><a href="#">@Model.PublishTitle</a></div>
            <div class="designer_wks">
                车辆价格：￡ @Model.Price
            </div>

            <div class="source_wks">
                车辆所在地区：@Fx.InformationPlatform.Site.Helper.GetEnumDescription((Fx.Entity.Catagroy.AreaCatagroy)Model.AreaId)
                <br />
                车辆所在城市：@Fx.InformationPlatform.Site.Helper.GetEnumDescription((Fx.Entity.Catagroy.CityCatagroy)Model.CityId)
                <br />
                车辆年份：@Model.CarYear
                <br />
                车辆行驶里程数：@Fx.InformationPlatform.Site.Helper.GetEnumDescription((Fx.Entity.Catagroy.MileCatagroy)Model.CarMileage)
                @if (!string.IsNullOrWhiteSpace(Model.Mark))
                {
                    <br />
                    <span>备注：</span>@Model.Mark
                }
            </div>
            <div class="goods_details_introduce">
            </div>
        </div>
    </div>
    <div class="grid_2 omega">
        <span class="right_btns_demo_set">
            <font class="saler_btns"><img src="@Fx.InformationPlatform.Site.AppSettings.ImageDomain("infodetail/Contact.png")" id="demoBtn1"></font>
            <font class="shares_wwkks">分享：
            <input id="jiathistitle" type="hidden" 
    value="亲们！！ 我刚刚在英淘网 http://www.yingtao.co.uk 发现了-（@Model.PublishTitle）- 哦，有兴趣的就转发一下吧！！ （来自@英淘网UK）"/>
            @Html.Partial("_JiaThis")
		</font>
            <font><img src="@Fx.InformationPlatform.Site.AppSettings.ImageDomain("infodetail/Contact.png")" id="jifa_alert_fras" onclick="show_al_fra()"></font>
            <font>
                @if (ViewBag.isFav)
                {
                <a href="#">
                    <img src="@Fx.InformationPlatform.Site.AppSettings.ImageDomain("add_on.png")" alt="已收藏"/>
                </a>
                }
                else
                {
                <a href="/CarTransferDetail/Favorite?infoId=@Model.CarTransferInfoId">
                    <img src="@Fx.InformationPlatform.Site.AppSettings.ImageDomain("add_off.png")" alt="添加收藏"
                onmouseover="this.src='@Fx.InformationPlatform.Site.AppSettings.ImageDomain("add_on.png")'" 
                onmouseout="this.src='@Fx.InformationPlatform.Site.AppSettings.ImageDomain("add_off.png")'"/>
                </a>
                }
            </font>
        </span>
    </div>
    <div class="clear"></div>
</div>

<div class="clear"></div>
<input id="tip" type="hidden"  value="@TempData["Tip"]"/>
<input id="infoid" type="hidden" value="@Model.CarTransferInfoId" />
<input id="channelCatagroy" type="hidden"  value="@((int)Fx.Entity.ChannelCatagroy.FxCarTransfer)"/>
<input id="email" type="hidden"  value="@Model.PublishUserEmail"/>

@Html.Partial("Partial/Ad")
<script type="text/javascript" src="http://v3.jiathis.com/code_mini/jia.js?uid=1353938214106494" charset="utf-8"></script>
<script type="text/javascript" src="@Fx.InformationPlatform.Site.AppSettings.JavaScriptDomain("easydialog.min.js")"></script>
<script type="text/javascript" src="@Fx.InformationPlatform.Site.AppSettings.JavaScriptDomain("getelepos.js")"></script>
<script type="text/javascript" src="@Fx.InformationPlatform.Site.AppSettings.JavaScriptDomain("List.js")"></script>

