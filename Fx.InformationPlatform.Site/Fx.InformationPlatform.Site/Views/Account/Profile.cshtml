@{
    ViewBag.Title = "Profile";
}
@Html.Partial("Partial/Tab")
<div class="grid_24">
    <form data-callback="submit_after" class="ajax form" action="/ajax/profile/update/"
    method="POST">
    <!-- form_b1614 start -->
    <div class="hide">
    </div>
    <div class="p-line">
        <label class="p-label">
            <cite class="red">*</cite>用户名：</label><input type="text" name="nickname" value="chen27468"
                autocomplete="off" placeholder="" belong="用户名" class="form-input form-input-150 required"
                required="true" style="border: 1px solid rgb(226, 226, 226);">
    </div>
    <div class="p-line">
        <label class="p-label">
            <cite class="red">*</cite>手机号码：</label>未验证 <a href="/auth/mobile/?mobile=18721103976">验证</a> 或 <strong>18721103976</strong> <a href="/auth/mobile/">修改</a>
    </div>
    <div class="p-line" id="form_b1614_avatar">
        <label class="p-label">
            头像：</label><a href="/wo/profile/avatar/">上传</a>
    </div>
    <div class="p-line" id="form_b1614_pass">
        <label class="p-label">
            密码：</label><a href="/wo/profile/password/">修改</a>
    </div>
    <div class="p-line" id="form_b1614_qq">
        <label class="p-label">
            QQ号码：</label><input type="text" name="qq" value="" autocomplete="off" placeholder=""
                belong="QQ号码" class="form-input form-input-150">
    </div>
    <div class="p-line" id="form_b1614_gender">
        <label class="p-label">
            性别：</label><label class="radio"><input name="gender" type="radio" class="" value="男"
                belong="性别">
                男</label>
        <label class="radio">
            <input name="gender" type="radio" class="" value="女" belong="性别">
            女</label>
    </div>
    <div class="p-line" id="form_b1614_所在地">
        <label class="p-label">
            所在地：</label>
    </div>
    <div class="p-line" id="form_b1614_家乡">
        <label class="p-label">
            家乡：</label>
    </div>
    <div class="p-line" id="form_b1614_email">
        <label class="p-label">
            电子邮箱：</label><input type="text" name="email" value="chen27468@163.com" autocomplete="off"
                placeholder="" belong="电子邮箱" class="form-input form-input-150">
    </div>
    <div class="p-line" id="form_b1614_description">
        <label class="p-label">
            个人签名：</label><textarea name="description" placeholder="" belong="个人签名" title="" autocomplete="off"
                class="form-textarea form-input-400" size="20"></textarea>
        <cite id="tipsdescription" class="p-note hide">展现你个性的一面给大家，将会在<a href="http://www.baixing.com/u/88050635/">个人中心</a></cite>
    </div>
    <div class="p-submit buttons">
        <input type="submit" class="button button-green button-medium" value="确认保存">
        <span class="error-message red"></span>
    </div>
    <!-- form_b1614 end -->
    </form>
</div>
<script type="text/javascript" src="@Url.Content("~/baixing/js/plugins.js")"></script>

<script type="text/javascript" src="@Url.Content("~/baixing/js/instant.js")"></script>






